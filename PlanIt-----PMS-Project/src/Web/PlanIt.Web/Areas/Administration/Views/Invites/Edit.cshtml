@using PlanIt.Web.ViewModels.Invites
@model PlanIt.Web.ViewModels.Invites.InviteEditInputModel

@{
    this.ViewData["Title"] = "Edit";
    var invites = (IEnumerable<InviteEditInputModel>)this.ViewData["Invites"];
}

<div class="text-center">
    <h3 class="display-5 p-4 badge-secondary">Edit invite by email</h3>
    <div class="container p-4">
        <div class="form-group row">
            <div class="col-4 text-right">
                <i class="fas fa-mail-bulk fa-2x" style="line-height:1.25;"></i>
            </div>
            <div class="col-4">
                <select asp-for="@Model.Id" class="custom-select mr-sm-2">
                    <option value="0" selected">Choose email...</option>
                    @foreach (var invite in invites)
                    {
                        <option value="@invite.Id" selected">@invite.Email</option>
                    }
                </select>
            </div>
            <form id="getId" class="col-4 text-left" method="get">
                <button id="chooseEmail" onclick="getId()" class="btn btn-primary">Choose Email</button>
            </form>
        </div>
        @if (Model != null)
        {
            <hr class="bg-dark" />
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-4 text-right">
                        <i class="fas fa-envelope fa-2x" style="line-height:1.25;"></i>
                    </div>
                    <div class="col-4">
                        <input class="form-control" asp-for="@Model.Email">
                    </div>
                    <label asp-for="@Model.Email" class="col-4 col-form-label text-left"></label>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                @if (Model.IsInvited)
                {
                    <div class="form-group row">
                        <div class="col-4 text-right">
                            <i class="fas fa-calendar-check fa-2x" style="line-height:1.25;"></i>
                        </div>
                        <div class="col-4">
                            <input class="form-control" asp-for="@Model.ExpiredOn">
                        </div>
                        <label asp-for="@Model.ExpiredOn" class="col-4 col-form-label text-left"></label>
                        <span asp-validation-for="@Model.ExpiredOn" class="text-danger"></span>
                    </div>
                }
                <div class="form-group row">
                    <div class="col-4 text-right">
                        <i class="fas fa-calendar-check fa-2x" style="line-height:1.25;"></i>
                    </div>
                    <div class="col-4">
                        <input class="form-control" asp-for="@Model.RequestExpiredOn">
                    </div>
                    <label asp-for="@Model.RequestExpiredOn" class="col-4 col-form-label text-left"></label>
                    <span asp-validation-for="@Model.RequestExpiredOn" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </div>
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    <script>
        function getId() {
            let select = document.getElementById("Id");
            let form = document.getElementById("getId");
            let selectedOptionValue = select.options[select.selectedIndex].value;

            if (selectedOptionValue == 0) {
                alert("Take another value!!!");
                event.stopPropagation();
            }
            else {
                form.setAttribute("action", "/Administration/Invites/Edit/" + String(selectedOptionValue));
            }
        }
    </script>
}
