@page
@using PlanIt.Common
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

@section Styles{
    <partial name="_IdentityStylesPartial" />
}

@section CustomStyles {
    <style>
        .w-10 {
            width: 10%;
        }
    </style>
}

<div class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo animated fadeInDown">
            <img class="w-10" src="~/images/planit_logo.png" alt="" />
            <b>@GlobalConstants.SystemName</b>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg animated fadeInUp"><strong><vc:company-name></vc:company-name> Ltd.</strong></p>
                <p class="login-box-msg animated fadeInUp">Enter your Email to recover your password now.</p>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <input asp-for="Input.Email" class="form-control" asp-placeholder-for="Input.Email" />
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-envelope"> </span>
                                        </div>
                                    </div>
                                </div>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Recover password</button>
                            </div>
                        </div>
                    </div>
                </form>
                <p class="mt-3 mb-1">
                    <a asp-page="./Login">Login</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
