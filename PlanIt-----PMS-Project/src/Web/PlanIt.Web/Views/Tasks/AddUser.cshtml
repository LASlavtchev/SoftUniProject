@using PlanIt.Web.ViewModels.Tasks
@using PlanIt.Data.Models
@model TaskAddUserInputModel

@{
    this.ViewData["Title"] = "Add User";
    var selectUsers = (IEnumerable<PlanItUser>)this.ViewData["Users"];
}

<div class="text-center">
    <h3 class="display-5 p-4 badge-secondary">Add user to task</h3>
    <div class="container p-4">
        <div>
            <span>Project: <strong>@Model.SubProjectProjectName</strong></span>
        </div>
        <div>
            <span>Project part: <strong>@Model.SubProjectSubProjectTypeName</strong></span>
        </div>
        <div>
            <span>Task: <strong>@Model.Name</strong></span>
        </div>
        <hr class="bg-dark" />
        <form method="post">
            <div asp-validation-summary="All" class="text-danger text-center"></div>
            <div class="form-group row">
                <div class="col-4 text-right">
                    <i class="fas fa-user-check fa-2x" style="line-height:1.25;"></i>
                </div>
                <div class="col-4">
                    <select asp-for="@(Model.UserId)" class="custom-select mr-sm-2">
                        <option value="null" selected>Choose user...</option>
                        @foreach (var user in selectUsers)
                        {
                            <option value="@(user.Id)">@user.Email</option>
                        }
                    </select>
                </div>
                <label class="col-4 col-form-label text-left">User</label>
            </div>
            <div class="form-group row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Add user to task</button>
                </div>
            </div>
        </form>
    </div>
</div>