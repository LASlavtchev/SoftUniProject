@using System.Globalization
@model PlanIt.Web.ViewModels.Dashboard.IndexManagementViewModel

<div class="content">
    <div class="container-fluid">
        <!-- Small boxes (Invites) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.AllProjectsCount</h3>
                        <p>Total Projects</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a asp-area="Management"
                       asp-controller="Projects"
                       asp-action="Index"
                       class="small-box-footer">
                        More info
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.AllApprovedProjectsCount</h3>
                        <p>All approved projects</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-unlocked"></i>
                    </div>
                    <a asp-area="Management"
                       asp-controller="Clients"
                       asp-action="Index"
                       class="small-box-footer">
                        More info
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.AllCompletedProjectsCount</h3>
                        <p>Total completed projects</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pricetag"></i>
                    </div>
                    <a asp-area="Management"
                       asp-controller="Projects"
                       asp-action="Index"
                       class="small-box-footer">
                        More info
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@Model.AssignedManagersCount</h3>
                        <p>All project managers</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-stalker"></i>
                    </div>
                    <a asp-area="Management"
                       asp-controller="Projects"
                       asp-action="Index"
                       class="small-box-footer">
                        More info
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Small boxes -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.AssignedUsersCount</h3>
                        <p>Total users with tasks</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-person"></i>
                    </div>
                    <a asp-area=""
                       asp-controller="Tasks"
                       asp-action="Index"
                       class="small-box-footer">
                        More info
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.FreeUsersCount</h3>
                        <p>Free users</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-person-outline"></i>
                    </div>
                    <a asp-area=""
                       asp-controller="Tasks"
                       asp-action="Assign"
                       class="small-box-footer">
                        More info
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.TotalBudgetApprovedProjects.ToString("F2", CultureInfo.InvariantCulture)</h3>
                        <p>Total approved budget</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-cash"></i>
                    </div>
                    <a asp-area="Management"
                       asp-controller="Projects"
                       asp-action="Index"
                       class="small-box-footer">
                        More info
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@Model.TotalBudgetCompletedProjects.ToString("F2", CultureInfo.InvariantCulture)</h3>
                        <p>Total completed budget</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-pricetag"></i>
                    </div>
                    <a asp-area="Management"
                       asp-controller="Projects"
                       asp-action="Index"
                       class="small-box-footer">
                        More info
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Small boxes -->
        <div class="row">   
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.TotalCostsCompletedProjects.ToString("F2", CultureInfo.InvariantCulture)</h3>
                        <p>Total costs</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-calculator"></i>
                    </div>
                    <a asp-area="Management"
                       asp-controller="Projects"
                       asp-action="Index"
                       class="small-box-footer">
                        More info
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@Model.TotalProfit.ToString("F2", CultureInfo.InvariantCulture)</h3>
                        <p>Total profit</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-calculator-outline"></i>
                    </div>
                    <a asp-area="Management"
                       asp-controller="Projects"
                       asp-action="Index"
                       class="small-box-footer">
                        More info
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
    </div>
</div>