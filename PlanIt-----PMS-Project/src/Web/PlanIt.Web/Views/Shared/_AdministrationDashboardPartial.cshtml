@using PlanIt.Common
@model PlanIt.Web.ViewModels.Dashboard.IndexAdministrationViewModel

<div class="content">
    <div class="container-fluid">
        <!-- Small boxes (Invites) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.InvitesCount</h3>
                        <p>Total Invites</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a asp-area="Administration"
                       asp-controller="Invites"
                       asp-action="Index"
                       class="small-box-footer">
                        More info
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.InvitesApprovedCount</h3>
                        <p>Approved Invites</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-unlocked"></i>
                    </div>
                    <a asp-area="Administration"
                       asp-controller="Invites"
                       asp-action="Index"
                       class="small-box-footer">
                        More info
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.InvitesInvitedExpiredOnCount</h3>
                        <p>Invites Expired</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-timer"></i>
                    </div>
                    <a asp-area="Administration"
                       asp-controller="Invites"
                       asp-action="Index"
                       class="small-box-footer">
                        More info
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@Model.InvitesRequestExpiredOnCount</h3>
                        <p>Request Invites Expired</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-timer"></i>
                    </div>
                    <a asp-area="Administration"
                       asp-controller="Invites"
                       asp-action="Index"
                       class="small-box-footer">
                        More info
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Small boxes (Users) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.UsersWithDeletedCount</h3>
                        <p>Total Users</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-stalker"></i>
                    </div>
                    <a asp-area="Administration"
                       asp-controller="Users"
                       asp-action="All"
                       class="small-box-footer">
                        More info
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.UsersCount</h3>
                        <p>Active Users</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a asp-area="Administration"
                       asp-controller="Users"
                       asp-action="All"
                       class="small-box-footer">
                        More info
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.UsersDeletedCount</h3>
                        <p>Inactive Users</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-stalker"></i>
                    </div>
                    <a asp-area="Administration"
                       asp-controller="Users"
                       asp-action="Deleted"
                       class="small-box-footer">
                        More info
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@Model.ClientsCount</h3>
                        <p>Clients</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-person-outline"></i>
                    </div>
                    @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                    {
                        <a asp-area="Administration"
                           asp-controller="Users"
                           asp-action="All"
                           class="small-box-footer">
                            More info
                            <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    }
                    else
                    {
                        <a asp-area="Management"
                           asp-controller="Clients"
                           asp-action="Index"
                           class="small-box-footer">
                            More info
                            <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    }
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
    </div>
</div>